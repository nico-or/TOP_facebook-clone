<% flash.each do |type, message| %>

  <% icon =
    case type
    when 'success' then "bi-check-circle-fill"
    when 'danger' then "bi-exclamation-triangle-fill"
    else ""
    end %>

  <div class="alert alert-<%= type %> my-4" role="alert">
    <i class="bi <%= icon %> me-2"></i>
    <%= message %>
  </div>
<% end %>
