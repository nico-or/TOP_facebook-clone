<% # horrible hack to allow fullwidth button on posts#index
   klass = klass || '' %>

<% if current_user.liked_posts.include? post %>
  <% like =  current_user.likes.find_by(post_id: post.id) %>
  <%= button_to like_path(like), method: :delete,
  class: "btn btn-outline-primary #{klass}", form_class: "d-inline" do %>
    <%= bootstrap_icon('heart') %> Liked
  <% end %>
<% else %>
  <%= button_to post_likes_path(post), method: :post,
  class: "btn btn-primary #{klass}", form_class: "d-inline" do %>
    <%= bootstrap_icon('heart-fill') %> Like
  <% end %>
<% end %>
