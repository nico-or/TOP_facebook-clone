<% if @liked_posts.include? post %>
  <% like =  @likes.find_by(post_id: post.id) %>
  <%= button_to like_path(like), method: :delete,
  class: "btn btn-primary", form_class: "d-inline",
  params: { like: { post_id: post.id } } do %>
    <i class="bi bi-heart-fill"></i> Like
  <% end %>
<% else %>
  <%= button_to likes_path, method: :post,
  class: "btn btn-outline-primary", form_class: "d-inline",
  params: { like: { post_id: post.id } } do %>
    <i class="bi bi-heart"></i> Like
  <% end %>
<% end %>
